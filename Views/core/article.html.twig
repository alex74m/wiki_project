{% extends "layout.html.twig" %}

{% block title %}{{ article._sTitre }}{% endblock %}

{% block body %}
{% if article._bActif == 1 %}

    <div class="row">
                <h2>{{ article._sTitre }}</h2> <cite>Par : {{ article._iAuteurId._sNom }} le : {{article._dDateAjout|date("d/m/Y à h:m:s")}} </cite> 
                <br>
                <br>
                <p> {{ article._sContenu }}</p>
                <div class="tags">
                    <h4>Tags <span class="glyphicon glyphicon-tag"></span></h4>
                    {% for category in article._aCategories %}
                        <span class="btn-info" style="background-color:{{ category._sCodeHexa }} ">
                        <a href="search/{{ category._sNom|lower }}">{{ category._sNom }}</a>
                        </span>
                    {% endfor %}
                </div>    
        </div> 
    </div>

{% else %}
    Cette article n'est pas encore validé. Un peu de patience.
{% endif %}

{% endblock %}